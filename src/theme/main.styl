@import url('https://fonts.googleapis.com/css?family=Montserrat:400,700&subset=cyrillic')
@import '~slick-carousel/slick/slick.css'
@import '~slick-carousel/slick/slick-theme.css'
@import './colors.styl'
@import './sideNav.styl'
@import './outerNav.styl'

html
    font-family sans-serif
    -ms-text-size-adjust 100%
    -webkit-text-size-adjust 100%

body
    margin 0
    background-color $primary-color
    color #fff
    font-size 14px
    font-family Montserrat, Arial, sans-serif
    line-height 1.6
    -webkit-tap-highlight-color #FFF498
    -webkit-font-smoothing antialiased
    -webkit-text-size-adjust 100%

a
    background-color transparent

a:active,
a:hover
    outline 0

h1
    margin 0
    margin-bottom 30px
    font-size 2em

small
    font-size 80%

img
    border 0
    pointer-events none

svg:not(:root)
    overflow hidden

code,
kbd,
pre,
samp
    font-size 1em
    font-family monospace, monospace

button,
input,
optgroup,
select,
textarea
    margin 0
    color inherit
    font inherit

button
    overflow visible

button,
select
    text-transform none

button,
html input[type='button'],
input[type='reset'],
input[type='submit']
    cursor pointer
    -webkit-appearance button

button[disabled],
html input[disabled]
    cursor default

button::-moz-focus-inner,
input::-moz-focus-inner
    padding 0
    border 0

input
    line-height normal

input[type='checkbox'],
input[type='radio']
    box-sizing border-box
    padding 0

input[type='number']::-webkit-inner-spin-button,
input[type='number']::-webkit-outer-spin-button
    height auto

table
    border 2px solid
    border-spacing 0
    border-collapse collapse

tr
    border 2px solid #ffffff

td,
th
    padding 7px 10px
    width 320px

::-moz-selection
    background #FFF498

::selection
    background #FFF498

::-moz-selection
    background #FFF498

img::-moz-selection
    background transparent

img::selection
    background transparent

img::-moz-selection
    background transparent

.animation
    position fixed
    top 0
    left 0

.overlay
    position: fixed
    width: 100%
    height: 100%
    top: 0
    left: 0
    pointer-events none


.l-viewport
    position relative
    overflow hidden
    width 100%
    height 100vh
    box-shadow 0 0 45px 5px rgba(0, 0, 0, 0.85)

.l-wrapper
    position relative
    margin 0 auto
    max-width 90%
    width 1440px
    height 100%

.l-side-nav
    position absolute
    left 0
    display flex
    align-items center
    height 100%

    @media (max-width: 1180px)
        display none

    &::before
        position absolute
        top 50%
        left 0
        z-index 10
        max-height 750px
        width 2px
        height 70%
        background-color rgba(255, 255, 255, 0.6)
        content ''
        transform translateY(-50%)

.l-main-content
    position relative
    margin 0
    padding 0
    width 100%
    height 100%
    list-style none

.l-section
    position absolute
    width 100%
    height 100%

.section
    visibility hidden
    opacity 0
    transition opacity 0.4s ease-in-out, visibility 0s 0.4s

    &--is-active
        z-index 1
        visibility visible
        opacity 1
        transition opacity 0.4s ease-in-out 0.4s

    &--next
        transition transform 0.4s ease-in-out
        transform translateY(-45px)

    &--prev
        transition transform 0.4s ease-in-out
        transform translateY(45px)

.perspective
    position relative
    overflow hidden
    width 100%
    height 100%

    &--modalview
        position fixed
        perspective 1500px

.container
    position relative
    min-height 100%
    outline 30px solid #282828
    transition -webkit-transform 0.4s
    transition transform 0.4s
    transition transform 0.4s, -webkit-transform 0.4s
    transform translateZ(0) translateX(0) rotateY(0)

.modalview .container
    position absolute
    overflow hidden
    width 100%
    height 100%
    backface-visibility hidden

.effect-rotate-left .container
    transition -webkit-transform 0.4s
    transition transform 0.4s
    transition transform 0.4s, -webkit-transform 0.4s
    transform-origin 0 50%

.effect-rotate-left--animate .container
    outline 30px solid #ffffff
    transform translateZ(-1800px) translateX(-50%) rotateY(45deg)
