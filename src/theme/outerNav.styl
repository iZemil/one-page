.outer-nav
    position absolute
    top 50%
    left 55%
    visibility hidden
    margin 0
    padding 0
    list-style none
    text-align center
    transition visibility 0s 0.2s
    transform translateY(-50%)
    transform-style preserve-3d

    &.is-vis
        visibility visible

    &--return
        position absolute
        top 0
        left 0
        z-index 11
        display none
        width 100%
        height 100%
        cursor pointer

        &.is-vis
            display block

    & li
        color rgba(255, 255, 255, 0.5)
        font-weight 600
        font-size 55px
        opacity 0
        cursor pointer
        transition transform 0.2s, opacity 0.2s
        transform translateX(350px) translateZ(-1000px)
        transform-style preserve-3d

        @media (max-width: 767px)
            font-size 44px

        @media (max-width: 600px)
            font-size 20px

        &.is-vis
            opacity 1
            transition transform 0.4s, opacity 0.4s
            transform translateX(0) translateZ(0)

            &:nth-child(2)
                transition-delay 0.04s

            &:nth-child(3)
                transition-delay 0.08s

            &:nth-child(4)
                transition-delay 0.12s

            &:nth-child(5)
                transition-delay 0.16s

        &.is-active
            color #fff