.dialog
    position absolute
    top 50%
    left 50%
    right auto
    bottom auto
    border 0
    background #000
    overflow hidden
    border-radius 0
    outline none
    padding 0px
    margin-right -50%
    transform translate(-50%, -50%)
    min-width 320px
    max-width 800px
    color rgb(0, 0, 0)

    &__overlay
        position fixed
        top 0px
        left 0px
        right 0px
        bottom 0px
        background-color rgba(96, 96, 96, 0.75)
