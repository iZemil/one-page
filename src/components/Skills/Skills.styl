
.skills
    position fixed
    top 0
    left 0
    width 100%
    height 100%

    &__title
        display none
        font-size 24px

        @media (max-width: 1180px)
            display block

    &__content
        position relative
        display flex
        flex-direction column
        justify-content center
        align-items center
        margin 0 auto
        max-width 75%
        width 900px
        height 100%

        @media (max-width: 1180px)
            max-width 90%

        @media (max-width: 767px)
            justify-content center

        .modal
            padding 45px
            border-radius 4px
            box-shadow 0 0 30px 0 rgba(0, 0, 0, 0.25)
            text-align center

            @media (max-width: 480px)
                padding 0
                box-shadow none