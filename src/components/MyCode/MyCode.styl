.my-code
    position relative
    display flex
    flex-direction column
    justify-content center
    margin 0 auto
    max-width 75%
    width 900px
    height 100%

    @media (max-width: 767px)
        max-width none
        width auto

    &__content
        position relative
        height 400px

        &::before
            position absolute
            top 20px
            left 200px
            border 5px solid #ffffff
            border-right-color transparent
            border-bottom-color transparent
            content ''
            transform rotate(-25deg)
            -webkit-transform rotate(-25deg)

        & h2
            position relative
            z-index 1
            margin-top 35px
            font-weight 900
            font-size 68px
            line-height 1

            @media (max-width: 480px)
                font-size 45px

            &::after
                position absolute
                top 255px
                left 255px
                width 10px
                height 10px
                background-color #ffffff
                content ''

        & img
            position absolute
            right -12px
            bottom -90px
            height 600px

            @media (max-width: 1060px)
                display none

    &__desc
        font-size 16px

        a
            color #ffffff