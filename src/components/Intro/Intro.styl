.intro
    position relative
    display flex
    flex-direction column
    justify-content center
    margin 0 auto
    max-width 75%
    width 900px
    height 100%

    @media (max-width: 1180px)
        max-width 100%

    &--banner
        position relative
        height 475px

        @media (max-width: 900px)
            height 380px

        @media (max-width: 767px)
            height 215px

        @media (max-width: 600px) and (max-height: 750px)
            height auto

            &::before,
            &::after
                display none

        & h1
            position relative
            z-index 1
            max-width 460px
            font-weight 900
            font-size 68px
            line-height 1

            @media (max-width: 900px)
                font-size 55px

            @media (max-width: 767px)
                font-size 44px

            @media (max-width: 600px) and (max-height: 750px)
                margin-top 0

        & button
            position relative
            padding 5px 17px 5px 12px
            border none
            background-color transparent
            text-transform uppercase
            font-weight 700

        & button .btn-background
            position absolute
            top 0
            right 0
            left 23px
            z-index -1
            height 100%
            background-color #282828
            transition left 0.2s ease-in-out

        & button:hover .btn-background
            left 0

        & button:focus
            outline none

        & button svg
            position relative
            left 5px
            width 15px
            fill #fff

    &--options
        display flex
        justify-content space-between
        margin 0
        padding 0
        list-style none

        @media (max-width: 767px)
            display block

        @media (max-width: 600px) and (max-height: 750px)
            display none

        &>div
            max-width 275px
            color #282828
            text-decoration none
            cursor default
            transition color 0.2s ease-in-out

            @media (max-width: 900px)
                margin-right 30px

                &:last-child
                    margin-right 0

            @media (max-width: 767px)
                display block
                margin 0 0 30px
                max-width 100%

                &:last-child
                    margin-bottom 0

            &:hover
                color #fff

        & h3
            text-transform uppercase
            font-weight 600
            font-size 14px

        & p
            margin-bottom 0

        & ul
            padding-left 20px