.header
    position absolute
    top 0
    left 0
    z-index 10
    display flex
    justify-content space-between
    align-items center
    width 100%
    height 70px

    &--logo
        display flex
        align-items center
        color #fff
        text-decoration none

        p
            margin 0 0 0 10px
            font-weight 900
            font-size 16px

    &--nav-toggle
        display flex
        flex-direction column
        justify-content center
        align-items center
        width 50px
        height 50px
        cursor pointer

        & span,
        &::before,
        &::after
            position relative
            width 16px
            height 2px
            background-color #fff
            content ''

        &::before
            bottom 5px
            width 23px

        &::after
            top 5px
            width 23px

    &--cta
        position absolute
        top 50%
        left 50%
        visibility hidden
        padding 0 20px
        border 2px solid
        background-color transparent
        color #fff
        text-decoration none
        text-transform uppercase
        font-weight 700
        line-height 30px
        opacity 0
        transition opacity 0.4s ease-in-out, visibility 0s 0.4s
        transform translate(-50%, -50%)

        @media (max-width: 767px)
            display none

        &:focus
            outline none

        &.is-active
            visibility visible
            opacity 1
            transition opacity 0.4s ease-in-out 0.4s

.print-version
    position absolute
    right 10px
    bottom -20px
    display block
    width 30px
    height 30px
    background-size 80%
    font-size 0

    &::before
        position absolute
        bottom -16px
        display block
        width 100%
        color white
        content 'RUS'
        text-align center
        font-size 12px