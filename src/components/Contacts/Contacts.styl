.contacts
    position relative
    display flex
    flex-direction column
    justify-content center
    margin 0 auto
    max-width 75%
    width 700px
    height 100%

    @media (max-width: 1180px)
        max-width 100%

    &__content
        margin 0 auto
        text-align center

    p
        font-size 30px
        color rgba(255, 255, 255, 0.65)

        @media (max-width: 600px)
            font-size 25px

        @media (max-width: 480px)
            font-size 20px

    a
        color rgba(255, 255, 255, 1)
